<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:id="@+id/Ex.Activity.Home.DrawerLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <FrameLayout
                android:id="@id/Ex.App.Content.Container"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#88111111"
                android:orientation="vertical">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#333"/>

            <CheckBox
                    android:id="@+id/Activity.Home.CheckBox.AddFragmentToBackStack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Activity.Home.Check.AddFragmentToBackStack"
                    android:onClick="onAddToBackStackClick"
                    android:checked="true"
                    android:padding="10dip"/>

        </LinearLayout>

    </LinearLayout>

    <com.wit.android.support.examples.widget.ExNavigationListView
            android:id="@+id/Ex.Activity.Home.ExNavigationListView"
            style="@style/Ex.Navigation.Widget.ListView"
            android:layout_width="@dimen/Ex.Navigation.width"
            android:layout_height="match_parent"
            android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>