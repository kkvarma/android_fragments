<resources>
    
    <!-- ###### FRAGMENT NUMBERS ###### -->
    <eat-comment />

    <!-- ### GLOBAL ANIMATION DURATIONS ======================================================== -->
    <eat-comment/>
    <!-- Duration for a new incoming fragment's horizontal animation -->
    <integer name="Anim.Fragment.Horizontal.In.duration">500</integer>
    <!-- Duration for an old incoming back-stacked fragment's horizontal animation -->
    <integer name="Anim.Fragment.Horizontal.In.Back.duration">350</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) horizontal animation -->
    <integer name="Anim.Fragment.Horizontal.Out.duration">500</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's horizontal animation -->
    <integer name="Anim.Fragment.Horizontal.Out.Back.duration">350</integer>
    <!-- Duration for a new incoming fragment's vertical animation -->
    <integer name="Anim.Fragment.Vertical.In.duration">500</integer>
    <!-- Duration for an old incoming back-stacked fragment's vertical animation -->
    <integer name="Anim.Fragment.Vertical.In.Back.duration">350</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) vertical animation -->
    <integer name="Anim.Fragment.Vertical.Out.duration">500</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's vertical animation -->
    <integer name="Anim.Fragment.Vertical.Out.Back.duration">350</integer>

    <!-- ### ALPHA ANIMATION DURATIONS ========================================================= -->
    <eat-comment/>
    <!-- Duration for a new incoming fragment's alpha animation -->
    <integer name="Anim.Fragment.Alpha.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <!-- Duration for an old incoming back-stacked fragment's alpha animation -->
    <integer name="Anim.Fragment.Alpha.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) alpha animation -->
    <integer name="Anim.Fragment.Alpha.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's alpha animation -->
    <integer name="Anim.Fragment.Alpha.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>
    
    <!-- ### SLIDE ANIMATION DURATIONS ========================================================= -->
    <eat-comment/>
    <!-- Duration for a new incoming fragment's horizontal slide animation -->
    <integer name="Anim.Fragment.Slide.Horizontal.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <!-- Duration for an old incoming back-stacked fragment's horizontal slide animation -->
    <integer name="Anim.Fragment.Slide.Horizontal.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) horizontal slide animation -->
    <integer name="Anim.Fragment.Slide.Horizontal.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's horizontal slide animation -->
    <integer name="Anim.Fragment.Slide.Horizontal.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>
    <!-- Duration for a new incoming fragment's vertical slide animation -->
    <integer name="Anim.Fragment.Slide.Vertical.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <!-- Duration for an old incoming back-stacked fragment's vertical slide animation -->
    <integer name="Anim.Fragment.Slide.Vertical.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) vertical slide animation -->
    <integer name="Anim.Fragment.Slide.Vertical.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's vertical slide animation -->
    <integer name="Anim.Fragment.Slide.Vertical.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>

    <!-- ### SCALE ANIMATION DURATIONS ========================================================= -->
    <eat-comment/>
    <!-- Duration for a new incoming fragment's scale animation -->
    <integer name="Anim.Fragment.Scale.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <!-- Start offset duration for a new incoming fragment's scale animation -->
    <integer name="Anim.Fragment.Scale.In.offset">150</integer>
    <!-- Duration for an old incoming back-stacked fragment's scale animation -->
    <integer name="Anim.Fragment.Scale.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <!-- Start offset duration for an old incoming back-stacked fragment's scale animation -->
    <integer name="Anim.Fragment.Scale.In.Back.offset">100</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) scale animation -->
    <integer name="Anim.Fragment.Scale.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's scale animation -->
    <integer name="Anim.Fragment.Scale.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>
    <!-- Duration for a new incoming fragment's alpha animation within scale animation set -->
    <integer name="Anim.Fragment.Scale.Alpha.In.duration">400</integer>
    <!-- Duration for an old incoming back-stacked fragment's alpha animation within scale animation set -->
    <integer name="Anim.Fragment.Scale.Alpha.In.Back.duration">300</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) alpha animation within scale animation set -->
    <integer name="Anim.Fragment.Scale.Alpha.Out.duration">400</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's alpha animation within scale animation set -->
    <integer name="Anim.Fragment.Scale.Alpha.Out.Back.duration">300</integer>

    <!-- ### FLIP ANIMATION DURATIONS ========================================================== -->
    <eat-comment/>
    <!-- Duration for a new incoming fragment's horizontal flip animation -->
    <integer name="Anim.Fragment.Flip.Horizontal.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <integer name="Anim.Fragment.Flip.Horizontal.In.offset">250</integer>
    <!-- Duration for an old incoming back-stacked fragment's horizontal flip animation -->
    <integer name="Anim.Fragment.Flip.Horizontal.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <integer name="Anim.Fragment.Flip.Horizontal.In.Back.offset">175</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) horizontal flip animation -->
    <integer name="Anim.Fragment.Flip.Horizontal.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <integer name="Anim.Fragment.Flip.Horizontal.Out.offset">250</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's horizontal flip animation -->
    <integer name="Anim.Fragment.Flip.Horizontal.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>
    <integer name="Anim.Fragment.Flip.Horizontal.Out.Back.offset">175</integer>
    <!-- Duration for a new incoming fragment's vertical flip animation -->
    <integer name="Anim.Fragment.Flip.Vertical.In.duration">@integer/Anim.Fragment.Horizontal.In.duration</integer>
    <integer name="Anim.Fragment.Flip.Vertical.In.offset">250</integer>
    <!-- Duration for an old incoming back-stacked fragment's vertical flip animation -->
    <integer name="Anim.Fragment.Flip.Vertical.In.Back.duration">@integer/Anim.Fragment.Horizontal.In.Back.duration</integer>
    <integer name="Anim.Fragment.Flip.Vertical.In.Back.offset">175</integer>
    <!-- Duration for a current outgoing fragment's (new is incoming) vertical flip animation -->
    <integer name="Anim.Fragment.Flip.Vertical.Out.duration">@integer/Anim.Fragment.Horizontal.Out.duration</integer>
    <integer name="Anim.Fragment.Flip.Vertical.Out.offset">250</integer>
    <!-- Duration for a current outgoing (back-stacked is incoming) fragment's vertical flip animation -->
    <integer name="Anim.Fragment.Flip.Vertical.Out.Back.duration">@integer/Anim.Fragment.Horizontal.Out.Back.duration</integer>
    <integer name="Anim.Fragment.Flip.Vertical.Out.Back.offset">175</integer>


</resources>
